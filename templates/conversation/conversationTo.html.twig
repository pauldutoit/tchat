{% extends 'conv.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <div class="form-group">
        <h1 style="text-align:center;"> {{ destinataire|capitalize }} </h1>
    </div>
    <div style="height:350px;overflow:scroll;" class="example-wrapper border">
        <ul class="list-group list-group-flush">
            {% for message in messages %}
            <li class="list-group-item"><span style="font-size:12px;">{{ message.createdAt | date('h:i d/m/Y') }}</span></br> {{ message.contenu }} </li>
            {% endfor %}
        </ul>    
    </div>

    <div class="example-wrapper">
        {{ form_start(form) }}
        {{ form_row(form.contenu,{'label': "Ecrivez ici votre message"}) }}
        <button class="btn btn-success">Envoyer</button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
